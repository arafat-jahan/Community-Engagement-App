<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to the Community Engagement App"
            android:textSize="24sp"
            android:textColor="@color/primaryTextColor"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="sans-serif-medium" />

        <Button
            android:id="@+id/button_announcements"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Announcements"
            android:background="@drawable/button_background"
            android:textColor="@color/buttonTextColor"
            app:layout_constraintTop_toBottomOf="@id/text_welcome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="16dp"
            android:padding="12dp"/>

        <Button
            android:id="@+id/button_events"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Events"
            android:background="@drawable/button_background"
            android:textColor="@color/buttonTextColor"
            app:layout_constraintTop_toBottomOf="@id/button_announcements"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:padding="12dp"/>

        <Button
            android:id="@+id/button_forum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Forum"
            android:background="@drawable/button_background"
            android:textColor="@color/buttonTextColor"
            app:layout_constraintTop_toBottomOf="@id/button_events"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:padding="12dp"/>

        <Button
            android:id="@+id/button_services"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Services"
            android:background="@drawable/button_background"
            android:textColor="@color/buttonTextColor"
            app:layout_constraintTop_toBottomOf="@id/button_forum"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:padding="12dp"/>

        <Button
            android:id="@+id/button_marketplace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Marketplace"
            android:background="@drawable/button_background"
            android:textColor="@color/buttonTextColor"
            app:layout_constraintTop_toBottomOf="@id/button_services"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:padding="12dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
